<Window x:Class="EngageApp.Views.WidgetView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        Width="30" Height="30"
        MouseEnter="Window_MouseEnter"
        MouseLeave="Window_MouseLeave">
    
    <Window.Resources>
        <Storyboard x:Key="ExpandStoryboard">
            <DoubleAnimation Storyboard.TargetName="WidgetBorder" 
                             Storyboard.TargetProperty="Width"
                             From="30" To="60" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="WidgetBorder" 
                             Storyboard.TargetProperty="Height"
                             From="30" To="60" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="WidgetBorder" 
                             Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)"
                             From="0.2" To="1" Duration="0:0:0.2"/>
        </Storyboard>
        
        <Storyboard x:Key="CollapseStoryboard">
            <DoubleAnimation Storyboard.TargetName="WidgetBorder" 
                             Storyboard.TargetProperty="Width"
                             From="60" To="30" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="WidgetBorder" 
                             Storyboard.TargetProperty="Height"
                             From="60" To="30" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="WidgetBorder" 
                             Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)"
                             From="1" To="0.2" Duration="0:0:0.2"/>
        </Storyboard>
    </Window.Resources>
    
    <Border x:Name="WidgetBorder"
            Width="30" Height="30"
            Background="#FF0000"
            CornerRadius="5"
            MouseLeftButtonDown="WidgetBorder_MouseLeftButtonDown"
            RenderOptions.BitmapScalingMode="HighQuality">
        <Border.Effect>
            <DropShadowEffect Color="#FF0000" Direction="0" ShadowDepth="0" BlurRadius="10" Opacity="0.2"/>
        </Border.Effect>
        <TextBlock Text="W" FontWeight="Bold" Foreground="White" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Border>
</Window> 